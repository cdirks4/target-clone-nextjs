// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Product {
  id           String   @id @default(uuid()) @db.Uuid
  title        String
  brand        String
  rating       Float
  ratingsTotal Int      @map("ratings_total")
  images       String[]
  videos       String[]
  description  String[]
  highlights   String[]

  @@map("product")
}
